{
  "compilerOptions": {
    "target": "es2017", 
    "module": "es2015", 
    "outDir": "src",
    "rootDir": "app",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    //"allowJs": true,
    ////"inlineSourceMap": true,
    ////"sourceRoot": "src",
    "watch": true
  },
  "exclude": [
      "node_modules"
  ]
}
