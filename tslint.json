{
  /*
  * Possible values:
  * - the name of a built-in config
  * - the name of an NPM module which has a "main" file that exports a config object
  * - a relative path to a JSON file
  */
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "deprecation": true,
    "prefer-const": true,
    "typeof-compare": true,
    "use-default-type-parameter": true,
    "use-isnan": true,
    "strict-type-predicates": true,
    "prefer-object-spread": true,
    "prefer-conditional-expression": true,
    "no-unbound-method": [
      true,
      "ignore-static"
    ],
    "no-invalid-template-strings": true,
    "no-for-in-array": true,
    "no-floating-promises": true,
    "no-conditional-assignment": true,
    "await-promise": [
      true,
      "Thenable"
    ],
    "unified-signatures": true,
    "no-unnecessary-type-assertion": true,
    "promise-function-async": true,
    "no-angle-bracket-type-assertion": true,
    "no-boolean-literal-compare": true,
    "match-default-export-name": true,
    "no-unnecessary-callback-wrapper": true,
    "arrow-return-shorthand": [
      false
    ],
    "no-unnecessary-qualifier": true,
    "prefer-switch": [
      true,
      {
        "min-cases": 2
      }
    ],
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "return-undefined": true,
    "switch-final-break": true,
    "type-literal-delimiter": true,
    "arrow-parens": false,
    "no-consecutive-blank-lines": [
      true
    ],
    "align": [
      false
    ],
    "import-spacing": false,
    "interface-name": [
      false
    ],
    "interface-over-type-literal": false,
    "jsdoc-format": false,
    "no-trailing-whitespace": false,
    "one-line": [
      false
    ],
    "object-literal-key-quotes": [
      false
    ],
    "ordered-imports": [
      false
    ],
    "quotemark": [
      false
    ],
    "semicolon": [
      false
    ],
    "space-before-function-paren": false,
    "whitespace": [
      false
    ],
    "comment-format": [
      false
    ],
    "max-line-length": [
      false
    ],
    "indent": [
      false
    ],
    "curly": false,
    //"ban": false,
    "member-access": false, // add
    "object-literal-sort-keys": false, // add
    "no-console": [
      false
    ],
    "typedef-whitespace": [
      false
    ],
    "only-arrow-functions": [
      false
    ],
    "trailing-comma": [
      false
    ],
    "no-var-requires": false,
    "member-ordering": [
      false
    ],
    "no-constructor-vars": true,
    "no-debugger": true,
    "no-duplicate-key": true,
    "no-shadowed-variable": true,
    "no-duplicate-variable": true,
    "no-switch-case-fall-through": true,
    "no-unreachable": true,
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "React"
      }
    ],
    "no-unused-expression": [
      true,
      "allow-fast-null-checks",
      "allow-new",
      "allow-tagged-template"
    ],
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "switch-default": true,
    "typedef": [
      true,
      //"call-signature",
      "parameter",
      "property-declaration" //,
      //"member-variable-declaration"
    ],
    "jsx-no-multiline-js": false //add
  },
  "rulesDirectory": [
    /*
    * A list of relative or absolute paths to directories that contain custom rules.
    * See the Custom Rules documentation below for more details.
    */
  ]
}